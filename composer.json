{
  "name": "nextcloud/integration_phoenix",
  "description": "Phoenix integration app",
  "license": "AGPL3",
  "config": {
    "platform": {
      "php": "7.4"
    },
    "optimize-autoloader": true,
    "classmap-authoritative": true,
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    }
  },
  "scripts": {
    "cs:fix": "php-cs-fixer fix",
    "cs:check": "php-cs-fixer fix --dry-run --diff",
    "lint": "find . -name \\*.php -not -path './vendor/*' -exec php -l \"{}\" \\;",
    "test:unit": "phpunit -c tests/phpunit.xml",
    "post-install-cmd": [
      "@composer bin all install --ansi",
      "\"vendor/bin/mozart\" compose",
      "composer dump-autoload"
    ],
    "post-update-cmd": [
      "@composer bin all install --ansi",
      "\"vendor/bin/mozart\" compose",
      "composer dump-autoload"
    ]
  },
  "require": {
    "firebase/php-jwt": "^5.2",
    "bamarni/composer-bin-plugin": "^1.4"
  },
  "require-dev": {
    "nextcloud/coding-standard": "^1.0.0",
    "symfony/event-dispatcher": "^4",
    "phpunit/phpunit": "^9.5"
  },
  "extra": {
    "mozart": {
      "dep_namespace": "OCA\\Phoenix\\Vendor\\",
      "dep_directory": "/lib/Vendor/",
      "classmap_directory": "/lib/autoload/",
      "classmap_prefix": "NEXTCLOUD_INTEGRATION_PHOENIX_",
      "packages": [
        "firebase/php-jwt"
      ],
      "delete_vendor_directories": true
    }
  }
}
